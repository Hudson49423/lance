<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/extended_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lance - Android App"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lance is a smart management tool for freelance developers"
                android:textColor="@color/darkGrey"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="M" />

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="T" />

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="W" />

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="T" />

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="F" />

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="S" />

                <TextView
                    style="@style/HourEntryLabel"
                    android:text="S" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/darkGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <EditText
                    android:id="@+id/edit_mon"
                    style="@style/HourEntry"/>

                <EditText
                    android:id="@+id/edit_tue"
                    style="@style/HourEntry"/>

                <EditText
                    android:id="@+id/edit_wed"
                    style="@style/HourEntry"/>

                <EditText
                    android:id="@+id/edit_thur"
                    style="@style/HourEntry"/>

                <EditText
                    android:id="@+id/edit_fri"
                    style="@style/HourEntry"/>

                <EditText
                    android:id="@+id/edit_sat"
                    style="@style/HourEntry" />

                <EditText
                    style="@style/HourEntry" />

                <EditText
                    style="@style/HourEntry"/>

            </LinearLayout>

            <com.octopusbeach.lance.views.HourChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>